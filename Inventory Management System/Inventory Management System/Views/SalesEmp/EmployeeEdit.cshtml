<div ng-controller="ProductController as pc"
     ng-init="pc.populateFields()">
    <div class="col-md-12 Product-Heading">
        <h2>Edit Product</h2>
    </div>
    <form class="form-horizontal" ng-submit="pc.editProduct()">
        <div class="form-group">
            <label for="SalesStatus" class="col-sm-2 control-label">Sales Status</label>
            <div class="col-sm-10">
                <select class="form-control" id="SalesStatus" ng-model="pc.product.SalesStatus">
                    <option>Ready</option>
                    <option>Offered</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-default" value="Save"/>
            </div>
        </div>
    </form>
</div>