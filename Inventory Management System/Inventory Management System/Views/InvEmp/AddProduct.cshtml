<div class="col-md-12 Product-Heading">
    <h2>Add Product</h2>
</div>
<form class="form-horizontal">
    <div class="form-group">
        <label for="ArticleNumber" class="col-sm-2 control-label">Article Number</label>
        <div class="col-sm-10">
            <input type="articlenumber" class="form-control" id="ArticleNumber" placeholder="ArticleNumber">
        </div>
    </div>
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="name" class="form-control" id="Name" placeholder="Name">
        </div>
    </div>
    <div class="form-group">
        <label for="SerialNumber" class="col-sm-2 control-label">Serial Number</label>
        <div class="col-sm-10">
            <input type="serialnumber" class="form-control" id="SerialNumber" placeholder="Serial Number">
        </div>
    </div>
    <div class="form-group">
        <label for="InventoryLocation" class="col-sm-2 control-label">Inventory Location</label>
        <div class="col-sm-10">
            <input type="inventorylocation" class="form-control" id="InventoryLocation" placeholder="Inventory Location">
        </div>
    </div>
    <div class="form-group">
        <label for="WorldLocation" class="col-sm-2 control-label">World Location</label>
        <div class="col-sm-10">
            <select class="form-control" id="WorldLocation">
                <option>Denmark</option>
                <option>Germany</option>
                <option>Poland</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="Transit" class="col-sm-2 control-label">Transit</label>
        <div class="col-sm-10">
            <!-- !!!DROP DOWN MENU!!! -->
            <select class="form-control" id="transit">
                <option>Inbound</option>
                <option>Outbound</option>
                <option>Not Moving</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="Model" class="col-sm-2 control-label">Model</label>
        <div class="col-sm-10">
            <input type="model" class="form-control" id="Model" placeholder="Model">
        </div>
    </div>
    <div class="form-group">
        <label for="category" class="col-sm-2 control-label">Category</label>
        <div class="col-sm-10">
            <!-- !!!DROP DOWN MENU!!! -->
            <select class="form-control" id="category">
                <option>cat1</option>
                <option>cat2</option>
                <option>cat3</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="Tags" class="col-sm-2 control-label">Tags</label>
        <div class="col-sm-10">
            <input type="tags" class="form-control" id="Tags" placeholder="Tags">
        </div>
    </div>
    <div class="form-group">
        <label for="Comments" class="col-sm-2 control-label">Comments</label>
        <div class="col-sm-10">
            <input type="comments" class="form-control" id="Comments" placeholder="Comments">
        </div>
    </div>
    <div class="´form-group">
        <label class="col-sm-2 control-label">Files</label>
        <input id="input-2" type="file" class="file" multiple="true" data-show-upload="true" data-show-caption="true">
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Gem</button>
        </div>
    </div>
</form>
