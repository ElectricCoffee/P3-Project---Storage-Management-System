<div class="col-md-12 Product-Heading">
    <h2>Add Product</h2>
</div>

<form name="addForm" ng-controller="AcquisitorController as ac" 
      ng-submit="ac.addProduct()" class="form-horizontal">
    @*Articlenumber field*@
    <div class="form-group">
        <label for="ArticleNumber1" class="col-sm-2 control-label">Article Number</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ArticleNumber1" 
                   placeholder="ArticleNumber1" ng-model="ac.product.ArticleNumber1">
        </div>
    </div>
    @*Name field*@
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Name" 
                   placeholder="Name" ng-model="ac.product.Name">
        </div>
    </div>
    @*Serial number field*@
    <div class="form-group">
        <label for="SerialNumber" class="col-sm-2 control-label">Serial Number</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="SerialNumber" 
                   placeholder="Serial Number" ng-model="ac.product.SerialNumber">
        </div>
    </div>
    @*Model Field*@
    <div class="form-group">
        <label for="Amount" class="col-sm-2 control-label">Amount</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Amount" placeholder="Amount" ng-model="ac.product.Amount">
        </div>
    </div>
    <div class="form-group">
        <label for="AcquisitionPrice" class="col-sm-2 control-label">Acquisition Price</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="AcquisitionPrice"
                   placeholder="Acquisition Price" ng-model="ac.product.AcquisitionPrice">
        </div>
    </div>
    @*Model Field*@
    <div class="form-group">
        <label for="Model" class="col-sm-2 control-label">Model</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Model" 
                   placeholder="Model" ng-model="ac.product.Model">
        </div>
    </div>
    @*Category Field*@
    <div class="form-group">
        <label for="Category" class="col-sm-2 control-label">Category</label>
        <div class="col-sm-10">
            <!-- !!!DROP DOWN MENU!!! -->
            <select class="form-control" id="Category"
                    ng-model="ac.product.Category">
                <option>cat1</option>
                <option>cat2</option>
                <option>cat3</option>
            </select>
        </div>
    </div>
    @*Tags Field*@
    <div class="form-group">
        <label for="Tags" class="col-sm-2 control-label">Tags</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" 
                   id="Tags" placeholder="Tags" 
                   ng-model="ac.product.Tags">
        </div>
    </div>
    @*Kommentar field*@
    <div class="form-group">
        <label for="Comments" class="col-sm-2 control-label">Comments</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" 
                   id="Comments" placeholder="Comments" 
                   ng-model="ac.product.Comments">
        </div>
    </div>
    @* Files field*@
    <div class="´form-group">
        <label class="col-sm-2 control-label">Files</label>
        <input id="input-2" type="file" class="file" multiple="true" 
               data-show-upload="true" data-show-caption="true">
    </div>
    @* knap til at submit produktet *@
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default"> Save </button>
        </div>
    </div>
</form>