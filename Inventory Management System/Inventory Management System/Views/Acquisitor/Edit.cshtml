<div ng-controller="AcquisitorController as ac"
     ng-init="ac.populateFields()">
    <div class="col-md-12 Product-Heading">
        <h2>Edit Product</h2>
    </div>
    <form class="form-horizontal"
          ng-submit="ac.editProduct">
        <div class="form-group">
            <label for="ArticleNumber1" class="col-sm-2 control-label">Article Number</label>
            <div class="col-sm-10">
                <input type="text" class="form-control"
                       id="ArticleNumber1"
                       placeholder="Article Number"
                       ng-model="ac.product.ArticleNumber1">
            </div>
        </div>
        <div class="form-group">
            <label for="Name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Name"
                       placeholder="Name" ng-model="ac.product.Name">
            </div>
        </div>
        <div class="form-group">
            <label for="SerialNumber" class="col-sm-2 control-label">Serial Number</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="SerialNumber"
                       placeholder="Serial Number" ng-model="ac.product.SerialNumber">
            </div>
        </div>
        <div class="form-group">
            <label for="Model" class="col-sm-2 control-label">Model</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Model"
                       placeholder="Model" ng-model="ac.product.Model">
            </div>
        </div>
        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">Category</label>
            <div class="col-sm-10">
                <!-- !!!DROP DOWN MENU!!! -->
                <select class="form-control" id="category"
                        ng-model="ac.product.Category">
                    <option>cat1</option>
                    <option>cat2</option>
                    <option>cat3</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="Tags" class="col-sm-2 control-label">Tags</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Tags"
                       placeholder="Tags" ng-model="ac.product.Tags">
            </div>
        </div>
        <div class="form-group">
            <label for="Comments" class="col-sm-2 control-label">Comments</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Comments"
                       placeholder="Comments" ng-model="ac.product.Comments">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Files</label>
            <input id="input-2" type="file" class="file" multiple="true"
                   data-show-upload="true" data-show-caption="true"
                   ng-model="ac.product.Files">
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
    </form>
</div>