
@{
    ViewBag.Title = "Index";
}

<div ng-controller="MessageController as messageCtrl" class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Message test</h3></div>
    <div class="panel-body">
        <button type="submit" class="btn btn-default" ng-click="messageCtrl.sendMessage('foo', 'foomsg')">Hit Me!</button>
        <ul class="list-group">
            <li ng-repeat="msg in messageCtrl.messages" class="list-group-item">
                <strong>{{msg.Sender}}:</strong> {{msg.Message}}
            </li>
        </ul>
    </div>
</div>